        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) 
{
   if (isLoading || newValue == '') 
   {
      return;
   }
	
	var ga = new GlideAjax('CheckForNumberOfReportees');
	ga.addParam('sysparm_name', 'checkReportees');
	ga.addParam('sysparm_manager', g_form.getValue('reporting_manager'));
	ga.getXMLAnswer(isValidManager);

	function isValidManager(answer)
	{
		if(answer)
			{
				g_form.addInfoMessage(getMessage('The selection of reporting manager is valid....'));
			}
		else
			{
				g_form.addErrorMessage(getMessage('Invalid selection of reporting manager. Manager can not have more than five reportees....'));
				g_form.clearValue('reporting_manager');
			}
	}

   
   
}]]></script>
